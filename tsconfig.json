{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "composite": true,
    "incremental": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "skipLibCheck": true,
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
